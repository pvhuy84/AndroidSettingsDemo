<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.hcd_fresher048.androidsettingsdemo2.AboutActivity">
    <TextView
        android:id="@+id/tv_app_name_str"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_str"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="50sp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_app_name_str"
        android:id="@+id/tv_author_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_label"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tv_two_dot_vertical"
        android:layout_alignTop="@id/tv_author_label"
        android:layout_toRightOf="@id/tv_author_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two_dot_vertical"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_author_value"
        android:layout_toRightOf="@id/tv_author_label"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@id/tv_author_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_value"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_date_start_label"
        android:layout_below="@id/tv_author_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_start_label"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_alignTop="@id/tv_date_start_label"
        android:layout_toRightOf="@id/tv_author_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two_dot_vertical"
        android:textColor="@color/black"
        android:layout_alignLeft="@id/tv_two_dot_vertical"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_date_start_value"
        android:layout_toRightOf="@id/tv_author_label"
        android:layout_alignLeft="@id/tv_author_value"
        android:layout_alignTop="@id/tv_date_start_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_start_value"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_date_end_label"
        android:layout_below="@id/tv_date_start_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_end_label"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_alignTop="@id/tv_date_end_label"
        android:layout_toRightOf="@id/tv_author_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two_dot_vertical"
        android:textColor="@color/black"
        android:layout_alignLeft="@id/tv_two_dot_vertical"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_date_end_value"
        android:layout_toRightOf="@id/tv_author_label"
        android:layout_alignLeft="@id/tv_author_value"
        android:layout_alignTop="@id/tv_date_end_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_end_value"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_info_label"
        android:layout_below="@id/tv_date_end_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_label"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_alignTop="@id/tv_info_label"
        android:layout_toRightOf="@id/tv_author_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two_dot_vertical"
        android:textColor="@color/black"
        android:layout_alignLeft="@id/tv_two_dot_vertical"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_info_value"
        android:layout_toRightOf="@id/tv_author_label"
        android:layout_alignLeft="@id/tv_author_value"
        android:layout_alignTop="@id/tv_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_value"
        android:textColor="@color/black"
        android:textSize="20sp"/>

</RelativeLayout>
